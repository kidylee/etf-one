<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "ETF One", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",    root_path %></li>
        <li><%= link_to "Help",    help_path %></li>
        <% if current_user.try(:admin?) %>
         <li class="dropdown">
           <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin<span class="caret"></span></a>
           <ul class="dropdown-menu">
              <li><%= link_to 'Amount Adjustment', adjust_path, :class => 'navbar-link' %></li>
           </ul>

         </li>
        <% end %>
        <% if user_signed_in? %>
            <li><%= link_to 'Account', account_path, :class => 'navbar-link' %></li>
            <li><%= link_to 'History', user_history_path, :class => 'navbar-link' %></li>
            <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
        <% else %>
            <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>
            <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
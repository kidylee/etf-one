

<h1>Account Summary</h1>
<table class="table table-bordered">
    <thead>
      <tr>
        <th>Asset</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% ListingAsset.all.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td><%= @assets[a.name] || 0  %></td>
        <td><%= link_to "change", adjust_show_path(email: @user.email, asset: a['symbol']) %></td>
      </tr>
      <% end %>
      
    </tbody>
  </table>
